# ============================================
# Dashboard Customer - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control

# ============================================
# Supabase Configuration
# ============================================
# Supabase project URL (public - used client-side)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase anonymous key (public - used client-side)
# This key is safe to expose in client-side code
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase service role key (server-only - NEVER expose to client)
# This key bypasses Row Level Security (RLS)
# ⚠️ SECURITY WARNING: Keep this secret and server-side only
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================
# Email Service Configuration
# ============================================
# Email service provider: 'resend' or 'sendgrid'
# Default: 'resend'
EMAIL_SERVICE_PROVIDER=resend

# API key for the email service provider
# For Resend: Get from https://resend.com/api-keys
# For SendGrid: Get from https://app.sendgrid.com/settings/api_keys
EMAIL_SERVICE_API_KEY=your-email-api-key-here

# From email address for sending emails
# For Resend: Must be a verified domain
# For SendGrid: Must be a verified sender
# Default: 'noreply@example.com'
EMAIL_SERVICE_FROM=noreply@yourdomain.com

# Contact email for receiving notifications
# Used for contact form submissions and new account creation notifications
# If not set, falls back to EMAIL_SERVICE_FROM
# Default: (uses EMAIL_SERVICE_FROM)
CONTACT_EMAIL=hello@yourdomain.com

# ============================================
# Authentication Configuration
# ============================================
# Access code expiration time in minutes
# Default: 10
AUTH_CODE_EXPIRATION_MINUTES=10

# Maximum number of verification attempts before code is invalidated
# Default: 5
AUTH_CODE_MAX_ATTEMPTS=5

# Session duration in hours (access token lifetime)
# Default: 24
AUTH_SESSION_DURATION_HOURS=24

# Refresh token duration in days
# Default: 30
AUTH_REFRESH_TOKEN_DURATION_DAYS=30

# ============================================
# Development Only - Auth Bypass
# ============================================
# ⚠️ DEVELOPMENT ONLY: Set to 'true' to bypass authentication during development
# ⚠️ SECURITY WARNING: This will ONLY work in development (NODE_ENV !== 'production')
# ⚠️ NEVER enable this in production
# Default: false
BYPASS_AUTH=false

# ============================================
# Metrics API Configuration
# ============================================
# API Key for authenticating requests from checkout to metrics endpoint
# This key should be kept secret and only shared with the checkout application
# Generate a strong random key (e.g., using openssl rand -hex 32)
METRICS_API_KEY=your-metrics-api-key-here

# CORS Allowed Origins (comma-separated list)
# Origins allowed to make CORS requests to public API endpoints
# Example: http://localhost:3000,https://checkout.example.com
# In development, localhost is automatically allowed
CORS_ALLOWED_ORIGINS=

# ============================================
# Google Tag Manager Configuration
# ============================================
# Google Tag Manager container ID (e.g., "GTM-XXXXXXX")
# Leave empty if not using GTM
NEXT_PUBLIC_GTM_CONTAINER_ID=

# ============================================
# Next.js Configuration
# ============================================
# Base URL for the application (used in metadata and SEO)
# Default: https://bolt.bckstg.com.br
NEXT_PUBLIC_BASE_URL=https://bolt.bckstg.com.br

# Node environment: 'development' or 'production'
# This affects cookie security flags and other behaviors
# Default: 'development' (automatically set by Next.js)
NODE_ENV=development

# ============================================
# BoltX AI Configuration
# ============================================
# Enable BoltX AI-powered optimizations
# Default: false
BOLTX_ENABLED=false

# OpenAI API Key for generative AI insights
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=

# OpenAI Model to use (default: gpt-4-turbo-preview)
BOLTX_OPENAI_MODEL=gpt-4-turbo-preview

# Maximum tokens for OpenAI responses
BOLTX_OPENAI_MAX_TOKENS=2000

# Temperature for OpenAI (0.0-2.0, default: 0.7)
BOLTX_OPENAI_TEMPERATURE=0.7

# AI Provider: 'openai' or 'local'
BOLTX_AI_PROVIDER=openai

# Cache enabled for AI responses (default: true)
BOLTX_CACHE_ENABLED=true

# Cache TTL in seconds (default: 3600 = 1 hour)
BOLTX_CACHE_TTL=3600

# Rate limit for AI requests per minute (default: 60)
BOLTX_RATE_LIMIT=60

# Prediction model version (default: v1)
BOLTX_PREDICTION_MODEL_VERSION=v1

# ============================================
# Payment Gateway Configuration
# ============================================
# Payment gateway provider: 'stripe', 'paddle', etc.
# Default: 'stripe'
PAYMENT_GATEWAY_PROVIDER=stripe

# Stripe Configuration
# Stripe secret key (server-only - NEVER expose to client)
# Get from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Stripe publishable key (public - used client-side)
# Get from https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Stripe webhook secret (for verifying webhook signatures)
# Get from https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Default currency for payments (ISO 4217 code)
# Default: 'USD'
DEFAULT_PAYMENT_CURRENCY=USD

# Supported currencies (comma-separated)
# Default: 'USD,BRL'
SUPPORTED_CURRENCIES=USD,BRL

