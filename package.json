{
  "name": "dashboard-customer",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3002",
    "build": "next build",
    "start": "next start -p 3002",
    "lint": "next lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:boltx": "vitest run src/app/api/boltx/**",
    "type-check": "tsc --noEmit",
    "migrate:list": "tsx scripts/run-migrations-simple.ts",
    "migrate": "tsx scripts/run-migrations.ts",
    "analyze": "ANALYZE=true next build",
    "audit": "npm audit --production",
    "audit:console": "grep -r 'console\\.\\(log\\|error\\|warn\\|info\\)' src/ || echo 'No console statements found'",
    "audit:security": "./scripts/security-audit.sh",
    "audit:fix": "npm audit fix"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@heroui/react": "^2.8.5",
    "@internationalized/date": "^3.10.0",
    "@netlify/plugin-nextjs": "^5.11.2",
    "@react-types/datepicker": "^3.13.2",
    "@supabase/supabase-js": "^2.39.0",
    "@tanstack/react-query": "^5.17.0",
    "@tiptap/extension-link": "^3.10.1",
    "@tiptap/react": "^2.1.0",
    "@tiptap/starter-kit": "^2.1.0",
    "@types/node": "^24.10.0",
    "@types/react": "^18.2.57",
    "@types/react-dom": "^18.2.19",
    "autoprefixer": "^10.4.17",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.16.0",
    "next": "14.1.0",
    "next-intl": "^3.0.0",
    "next-seo": "^6.4.0",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "react-color": "^2.19.3",
    "react-day-picker": "^9.11.1",
    "react-dom": "^18.2.0",
    "recharts": "^2.10.0",
    "sonner": "^2.0.7",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.8.3",
    "zod": "^4.1.12",
    "zustand": "^4.5.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.5.2",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitest/ui": "^2.1.9",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-config-next": "14.1.0",
    "jsdom": "^25.0.1",
    "prettier": "^3.4.2",
    "sharp": "^0.34.4",
    "tsx": "^4.7.0",
    "vitest": "^2.1.9"
  }
}
